@model IEnumerable<SIMailer.Models.ModelClasses.PersonType>
@{
    ViewBag.Title = "ViewAllPersonType";
}
<link href="~/stylesheet.css" rel="stylesheet" />

<ol class="breadcrumb">

    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
    {
        @Html.ActionLink("Home", "Home")
        <li class="active">
            / @ViewBag.Title
        </li>
    }
    else
    {
        <li class="active">
            Home
        </li>
    }
</ol>
<div>
    <center><h4><span class="custom-heading"><u>View All Person Type</u></span></h4></center>
</div>
@using (Html.BeginForm("ViewAllPersonType", "", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (Model.Any())
    {
        <div class="container">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(Model => Model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(Model => Model.Name)
                    </th>
                    <th>
                        <strong>Edit</strong>
                    </th>
                    <th>
                        <strong>Delete</strong>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    if (ViewBag.Id != item.Id)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(itemModel => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(itemModel => item.Name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "ViewAllPersonType", new { id = item.Id })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeletePersonType", new { id = item.Id })
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(itemModel => item.Id)
                            </td>
                            <td>
                                <input type="hidden" name="Id" value="@item.Id"/>
                                <input type="text" name="Name" value="@item.Name" required />
                            </td>
                            <td>
                                <input type="submit" value="Update" />
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "DeletePersonType", new { id = item.Id })
                            </td>
                        </tr>
                    }
                }
            </table>

        </div>
    }
    else
    {

    }
            <div>
                Add new person type:<input type="text" name="Name" />
                <br />
                <input type="submit" value="Add" />
            </div>
        
    }

